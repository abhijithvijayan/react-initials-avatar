		"fork-ts-checker-webpack-plugin": "^5.2.1",
		"husky": "^4.3.0",
		"install-peers-cli": "^2.2.0",
		"lint-staged": "^10.5.0",
		"mini-css-extract-plugin": "^1.2.1",
		"node-sass": "^4.14.1",
		"optimize-css-assets-webpack-plugin": "^5.0.4",
		"postcss": "^8.1.4",
		"postcss-loader": "^4.0.4",
		"prettier": "^2.1.2",
		"resolve-url-loader": "^3.1.2",
		"rimraf": "^3.0.2",
		"sass-loader": "^10.0.4",
		"ts-loader": "^8.0.7",
